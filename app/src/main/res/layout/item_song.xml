<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/img_song"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/music_image"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="song_name"
        app:layout_constraintStart_toEndOf="@+id/img_song"
        app:layout_constraintTop_toTopOf="@+id/img_song"
        app:layout_constraintBottom_toTopOf="@id/song_artist"
        style="@style/TEXT_MAIN"
        />
    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="song_artist"
        app:layout_constraintStart_toEndOf="@+id/img_song"
        app:layout_constraintTop_toBottomOf="@+id/song_name"
        app:layout_constraintBottom_toBottomOf="@id/img_song"
        style="@style/TEXT_SECOND"
        />

</androidx.constraintlayout.widget.ConstraintLayout>